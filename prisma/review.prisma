model Review {
  id        String   @id @default(uuid())
  rating    Int // 1-5
  comment   String?  @db.Text
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  mealId String
  meal   Meal   @relation(fields: [mealId], references: [id])

  @@unique([userId, mealId])
  @@map("reviews")
}
